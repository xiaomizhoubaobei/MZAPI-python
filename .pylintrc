[MASTER]
disable =
    C0114,   # 允许模块级缺少文档字符串
    C0115,   # 允许类级缺少文档字符串
    C0116,   # 允许函数级缺少文档字符串
    E1101,   # 忽略动态库的误报（如PyInstaller生成的可执行文件）
    W0612,   # 允许存在未使用的变量（用于占位或未来扩展）
    R0903,   # 允许类包含较多公共方法（默认7个）
    R0801,   # 允许类之间代码相似性（重复代码检测）
    W0221,   # 允许子类方法参数数量与父类不一致（面向对象设计需要）
    R0902,   # 允许类包含较多实例属性（默认7个）
    R0913,   # 允许函数参数较多（默认5个）
    R0917,   # 允许函数调用位置参数较多（默认5个）
    C0103,   # 允许非snake_case命名风格（兼容历史代码）
    W0104,
    R0914,
    R0915,
[FORMAT]
max-line-length = 120